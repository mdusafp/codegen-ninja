generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Padowan {
  id         Int      @id @default(autoincrement())
  bujinkan   Bujinkan @relation(fields: [bujinkanId], references: [id])
  bujinkanId Int
  name       String
  sensei     Sensei   @relation(fields: [senseiId], references: [id])
  senseiId   Int
}

model Sensei {
  id             Int        @id @default(autoincrement())
  bujinkan       Bujinkan   @relation(fields: [bujinkanId], references: [id])
  bujinkanId     Int
  favoriteWeapon Weapon
  mainArt        MartialArt
  name           String
  padowans       Padowan[]
}

model Bujinkan {
  id       Int        @id @default(autoincrement())
  name     String
  mainArt  MartialArt
  padowans Padowan[]
  senseis  Sensei[]
}

enum MartialArt {
  Taijutsu
  Kenjutsu
  Naginatajutsu
  Shurikenjutsu
  Kayakujutsu
  Bajutsu
}

enum Weapon {
  Sword
  Spear
  Naginata
  Shuriken
  Kunai
  Kaginawa
}
